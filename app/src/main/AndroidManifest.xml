<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.com.myapplication" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".helloworld.FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name=".helloworld.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>

        <!-- ACTIVITY -->
        <activity
            android:name=".activity.BaseActivity"
            android:label="BaseActivity" >
        </activity>
        <activity
            android:name=".activity.FirstActivity"
            android:label="@string/title_activity_first"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".activity.SecondActivity"
            android:label="@string/title_activity_second" />
        <activity
            android:name=".activity.ThirdActivity"
            android:label="@string/title_activity_third" />

        <!-- UI -->
        <activity
            android:name=".ui.FirstActivity"
            android:label="FirstActivity" >
        </activity>
        <activity
            android:name=".ui.SecondActivity"
            android:label="SecondActivity" />

        <!-- ListView -->
        <activity
            android:name=".listview.ListviewActivity"
            android:label="@string/title_activity_listview" >
        </activity>
        <activity
            android:name=".talkdemo.TalkActivity"
            android:label="@string/title_activity_talk" >
        </activity>

        <!-- Fragment -->
        <activity
            android:name=".fragmentdemo.FragmentDemoActivity"
            android:label="@string/title_activity_fragment_demo" >
        </activity>

        <!-- News Demo -->
        <activity
            android:name=".newsdemo.NewsDemoActivity"
            android:label="@string/title_activity_news_demo" >
        </activity>
        <activity android:name=".newsdemo.NewsContentActivity" >
        </activity>
        <activity
            android:name=".broadcast.BroadcastActivity"
            android:label="@string/title_activity_broadcast" >
        </activity>

        <receiver android:name=".broadcast.BootCompleteReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".file.FileActivity"
            android:label="@string/title_activity_file" >
        </activity>
        <activity
            android:name=".file.LoginResultActivity"
            android:label="@string/title_activity_login_result" >
        </activity>
        <activity
            android:name=".file.SqliteActivity"
            android:label="@string/title_activity_sqlite" >
        </activity>
        <activity
            android:name=".contentprovider.ContentActivity"
            android:label="@string/title_activity_content" >
        </activity>
        <activity
            android:name=".contentprovider.ReadContactsActivity"
            android:label="@string/title_activity_read_contacts" >
        </activity>
        <activity
            android:name=".contentprovider.MyContentActivity"
            android:label="@string/title_activity_my_content" >
        </activity>
        <activity
            android:name=".http.NetActivity"
            android:label="@string/title_activity_net_work" >
        </activity>
        <activity
            android:name=".http.NetWebViewActivity"
            android:label="@string/title_activity_net_web_view" >
        </activity>
        <activity
            android:name=".http.HttpUrlConnectionActivity"
            android:label="@string/title_activity_http_url_connection" >
        </activity>
        <activity
            android:name=".http.HttpClientActivity"
            android:label="@string/title_activity_http_client" >
        </activity>
        <activity
            android:name=".httpdemo.HttpUrlConnectionDemoActivity"
            android:label="@string/title_activity_http_url_connection_demo" >
        </activity>
    </application>

</manifest>
