<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.com.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".FirstActivity"
            android:label="@string/title_activity_first"></activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"></activity>

        <!-- ACTIVITY -->
        <activity
            android:name=".activity.BaseActivity"
            android:label="BaseActivity">

        </activity>
        <activity
            android:name=".activity.FirstActivity"
            android:label="@string/title_activity_first"
            android:launchMode="singleTop">

        </activity>
        <activity
            android:name=".activity.SecondActivity"
            android:label="@string/title_activity_second"></activity>
        <activity
            android:name=".activity.ThirdActivity"
            android:label="@string/title_activity_third"></activity>

        <!-- UI -->
        <activity
            android:name=".ui.FirstActivity"
            android:label="FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SecondActivity"
            android:label="SecondActivity"></activity>


    </application>

</manifest>
