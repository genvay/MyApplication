<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.com.myapplication.file.FileActivity">

    <EditText
        android:id="@+id/file_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="file content" />

    <Button
        android:id="@+id/file_save_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_input"
        android:layout_centerHorizontal="true"
        android:text="save file" />

    <Button
        android:id="@+id/file_get_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_save_file"
        android:layout_centerHorizontal="true"
        android:text="get file content" />

    <TextView
        android:id="@+id/file_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_get_file"
        android:layout_centerHorizontal="true"
        android:text="file content" />

    <TextView
        android:id="@+id/shared_preference_input_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_text_view"
        android:layout_centerHorizontal="true"
        android:text="key" />

    <TextView
        android:id="@+id/shared_preference_input_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_preference_input_key"
        android:layout_centerHorizontal="true"
        android:text="value" />

    <Button
        android:id="@+id/shared_preference_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_preference_input_value"
        android:layout_centerHorizontal="true"
        android:text="key-value" />

    <Button
        android:id="@+id/shared_preference_get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_preference_save_button"
        android:layout_centerHorizontal="true"
        android:text="get value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_preference_get_button"
        android:layout_centerHorizontal="true"
        android:text="value" />

</RelativeLayout>
